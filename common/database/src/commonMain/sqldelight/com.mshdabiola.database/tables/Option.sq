import com.mshdabiola.model.data.Item;
import kotlin.collections.List;

CREATE TABLE IF NOT EXISTS optionEntity (
   id INTEGER PRIMARY KEY AUTOINCREMENT ,
   nos INTEGER NOT NULL ,
   questionId INTEGER NOT NULL ,
   content TEXT AS List<Item> NOT NULL,
   isAnswer INTEGER DEFAULT 0
);

getById:
SELECT *
FROM optionEntity
WHERE id = ?;

getAll:
SELECT *
FROM  optionEntity;

insert:
INSERT INTO optionEntity(nos,questionId,content,isAnswer)
VALUES ?;

insertOrReplace:
INSERT OR REPLACE INTO optionEntity(id,nos,questionId,content,isAnswer)
VALUES ?;

deleteByID:
DELETE FROM optionEntity
WHERE id = ?;

update:
UPDATE optionEntity
SET nos=?,questionId = ?,content=?,isAnswer=?
WHERE id = ?;