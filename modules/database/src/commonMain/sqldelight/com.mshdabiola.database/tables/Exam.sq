getById:
SELECT *
FROM examEntity
WHERE id = ?;

getBySubject:
SELECT *
FROM examEntity
WHERE subjectId = ?;


getAll:
SELECT *
FROM  examEntity;

insert:
INSERT INTO examEntity(subjectId,year,isObjOnly)
VALUES ?;

insertOrReplace:
INSERT OR REPLACE INTO examEntity(id,subjectId,year,isObjOnly)
VALUES ?;

deleteByID:
DELETE FROM examEntity
WHERE id = ?;

update:
UPDATE examEntity
SET subjectId = ?, year=?
WHERE id = ?;

getAllWithSubject:
SELECT *
FROM examEntity AS exam
JOIN subjectEntity AS sub
ON exam.subjectId = sub.id;

getAllBySubjectIdWithSubject:
SELECT *
FROM examEntity AS exam
JOIN subjectEntity AS sub
ON exam.subjectId = sub.id
WHERE subjectId =?;

deleteAll:
DELETE FROM examEntity;

updateType:
UPDATE examEntity
SET isObjOnly =?
WHERE id = ?;


